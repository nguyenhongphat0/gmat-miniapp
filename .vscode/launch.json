{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Zalo Mini App",
            "request": "launch",
            "type": "chrome",
            "url": "http://local.mini.zalo.me:3000",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": [
                "--window-size=375,812",
                "--window-position=1065,25",
                "--app=http://local.mini.zalo.me:3000",
                "--remote-debugger-handles"
            ]
        },
        {
            "name": "Launch Editor",
            "request": "launch",
            "type": "chrome",
